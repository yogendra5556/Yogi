---
type Props = { dateString: string; class?: string; 'data-sb-field-path'?: string };

const { dateString, class: className, 'data-sb-field-path': fieldPath } = Astro.props;
const date = new Date(dateString);
---

<time datetime={dateString} class={className} data-sb-field-path={fieldPath}>
    {
        date.toLocaleDateString('en-us', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
        })
    }
</time>
